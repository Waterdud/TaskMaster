<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TaskMaster.Kontaktandmed">
    <StackLayout Padding="20">
        <Picker x:Name="ContactPicker" Title="Select Contact"
                ItemDisplayBinding="{Binding Name}" />
        <Button Text="Call" Clicked="CallButton"/>
        <Button Text="Send SMS" Clicked="SmsSendButton"/>
        <Button Text="Send Email" Clicked="EmailSendButton"/>
    </StackLayout>
</ContentPage>
